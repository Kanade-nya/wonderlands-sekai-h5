{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json",
      "composite": true
    },
    {
      "path": "./tsconfig.node.json",
      "composite": true
    }
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "typings",
    "src/.env"
  ]

//  "include": [
//    "src/**/*.ts",
//    "src/**/*.tsx",
//    "src/**/*.vue"
//  ]
}